<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Selecione" />

    <RadioGroup
        android:id="@+id/opcaoRg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:text=" Humano VS  Computador"/>

        <RadioButton
            android:layout_width="350dp"
            android:layout_height="63dp"
            android:layout_weight="1"
            android:text="Humano VS Computador VS Computador"/>

    </RadioGroup>


    <EditText
        android:id="@+id/rodadasEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_horizontal"
        android:text="Quantidade de Rodadas"/>


    <CheckBox
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="1 Rodada" />


    <CheckBox
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="3 Rodadas" />

    <CheckBox
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="5 Rodadas" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pedra"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Papel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tesoura" />

    

</LinearLayout>


